<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.DetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:menu="@menu/details_menu"
            app:navigationIconTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/play_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/detail_poster_img"
            app:layout_constraintStart_toStartOf="@+id/detail_poster_img">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/watch_video"
                android:padding="6dp"
                android:drawablePadding="5dp"
                android:textColor="@color/white"
                app:drawableStartCompat="@drawable/ic_play"
                app:drawableTint="@color/white" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/detail_poster_img"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_margin="16dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Toolbar"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/detail_event_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/evt_nm"
            android:textColor="@android:color/white"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/detail_poster_img"
            app:layout_constraintStart_toStartOf="@+id/detail_poster_img"
            app:layout_constraintTop_toBottomOf="@+id/detail_poster_img" />

        <TextView
            android:id="@+id/conducted_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cdn_title"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_mdm"
            app:layout_constraintStart_toStartOf="@id/detail_event_title"
            app:layout_constraintTop_toBottomOf="@+id/detail_event_title" />

        <TextView
            android:id="@+id/conducted_usr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/conducted_by"
            app:layout_constraintEnd_toEndOf="@+id/detail_event_title"
            app:layout_constraintStart_toEndOf="@id/conducted_by"
            app:layout_constraintTop_toTopOf="@+id/conducted_by" />

        <View
            android:id="@+id/toolbarDivider1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/card_bg"
            app:layout_constraintTop_toBottomOf="@id/detail_event_desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/detail_desc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textStyle="bold"
            android:text="@string/evt_dsc"
            android:textColor="#ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/conducted_by" />

        <TextView
            android:id="@+id/detail_event_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="8dp"
            android:maxLines="7"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="@+id/conducted_usr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_desc_title" />

        <RelativeLayout
            android:id="@+id/details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_event_desc">

            <TextView
                android:id="@+id/more_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/evt_details"
                android:textColor="#9C9C9C"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/more_details"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:text="@string/ctg_title"
                android:textColor="#9C9C9C" />

            <TextView
                android:id="@+id/evt_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/more_details"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_alignStart="@+id/evt_date"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/evt_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/evt_category"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:text="@string/evt_date"
                android:textColor="#9C9C9C" />

            <TextView
                android:id="@+id/evt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/evt_category"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/evt_date_title"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/evt_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/evt_date"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:text="@string/evt_time"
                android:textColor="#9C9C9C" />

            <TextView
                android:id="@+id/evt_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/evt_date"
                android:layout_alignStart="@+id/evt_date"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/evt_location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/evt_time"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:text="@string/location"
                android:textColor="#9C9C9C" />

            <TextView
                android:id="@+id/evt_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/evt_time"
                android:layout_alignStart="@+id/evt_date"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/evt_location"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:text="@string/event_price"
                android:textColor="#9C9C9C" />

            <TextView
                android:id="@+id/evt_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/evt_location"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:layout_alignStart="@id/evt_location"
                android:layout_marginTop="8dp" />

        </RelativeLayout>

        <View
            android:id="@+id/toolbarDivider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/card_bg"
            app:layout_constraintTop_toBottomOf="@id/details_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/reminder_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:drawablePadding="8dp"
            android:textColor="@android:color/darker_gray"
            android:text="@string/evt_rm_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbarDivider2"
            app:drawableStartCompat="@drawable/ic_rate" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/evt_reminder_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/blue_700"
            android:text="@string/add_reminder"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:icon="@android:drawable/ic_input_add"
            app:iconGravity="textStart"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reminder_title"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>