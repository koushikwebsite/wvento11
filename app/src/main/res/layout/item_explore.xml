<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="event"
            type="com.wvt.wvento.models.Results" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        onExploreClickListener="@{event}"
        android:layout_marginTop="8dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@color/card_bg"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="10dp"
        android:elevation="3dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/event_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="16dp"
                android:layout_marginStart="14dp"
                android:text="@{event.title}"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/event_thumb"
                app:layout_constraintTop_toTopOf="@+id/event_thumb" />

            <TextView
                android:id="@+id/event_organizer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="8dp"
                android:layout_marginStart="14dp"
                android:text="@{@string/evt_organizer(event.event_user)}"
                android:textColor="@color/text_mdm1"
                android:textSize="13sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/event_thumb"
                app:layout_constraintTop_toBottomOf="@+id/event_name" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/event_thumb"
                android:layout_width="125dp"
                android:layout_height="175dp"
                android:scaleType="fitXY"
                android:transitionName="sharedName"
                loadImageUrl="@{event.event_poster}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/event_thumb"
                app:layout_constraintEnd_toEndOf="@+id/event_thumb"
                app:layout_constraintStart_toStartOf="@+id/event_thumb"
                app:srcCompat="@drawable/black_gradient" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/event_status"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/event_name"
                app:layout_constraintStart_toStartOf="@+id/event_name">

                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toStartOf="@+id/status"
                    android:fontFamily="sans-serif-condensed-light"
                    android:gravity="center_vertical"
                    android:text="@{event.category}"
                    android:textColor="@color/text_mdm"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="18dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    oneEventStatus="@{event}"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/ic_blur_bg"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/event_thumb"
                app:layout_constraintTop_toTopOf="@id/event_thumb">

                <TextView
                    loadEventDate="@{event.start_date}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingStart="3dp"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <TextView
                    loadEventMnh="@{event.start_date}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="3dp"
                    android:gravity="center"
                    android:paddingEnd="3dp"
                    android:textColor="@color/black" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>